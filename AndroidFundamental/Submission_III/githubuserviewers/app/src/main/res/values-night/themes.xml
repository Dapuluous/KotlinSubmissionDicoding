<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Githubuserviewers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_github</item>
        <item name="colorPrimaryVariant">@color/black_github</item>
        <item name="colorOnPrimary">@color/white_github</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_github</item>
        <item name="colorSecondaryVariant">@color/black_github</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/black_github</item>
        <item name="android:tint">@color/black_github</item>
        <item name="android:textColorHint">@color/black_github</item>
    </style>
</resources>